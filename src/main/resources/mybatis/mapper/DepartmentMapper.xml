<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.aegean19.springboot03web.mapper.DepartmentMapper">
    <select id="getAllDpt" resultType="Department">
        select * from department
    </select>
    <select id="getDptById" resultType="Department">
        select * from department where id=#{id}
    </select>
</mapper>